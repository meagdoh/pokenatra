<h2><a href="/pokemon">All Pokemon</a></h2>
<div class="pokemon">
    <img src="<%= @pokemon.img_url %>">
  <p> Pokemon Name: <%= @pokemon.name %> </p>
    <p> Poke Type: <%= @pokemon.poke_type %> </p>
      <p> CP: <%= @pokemon.cp %> </p>

  <h2> Edit Pokemon </h2>
  <form action="/pokemon/<%= @pokemon.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="name">Name:</label>
    <input name="name" value="<%= @pokemon.name %>">
    <p><label>Poke Type:</label>
    <input type="poke type" value="<%= @pokemon.poke_type %>"> </p>
    <p><label>CP:</label>
    <input cp="cp" value="<%= @pokemon.cp %>"></p>
    <p><label>image url:</label>
    <input image="image url" value="<%= @pokemon.img_url %>"></p>
    <input type="submit" value="Update">
  </form>

  <h2>Delete Pokemon</h2>
  <form action="/pokemon/<%= @pokemon.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input class="button-delete" type="submit" value="Delete!">
  </form>
